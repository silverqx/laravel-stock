{% extends 'product/layout' %}

{% block title 'Products list' %}

{% block content %}
    <div class="col-md-12 col-lg-11 col-xl-9">
        <div class="mb-3">
            <a href="{{ route('products.create') }}" class="btn btn-primary">
                <i class="fas fa-plus mr-1"></i>
                Create Product
            </a>
        </div>
        <div class="card">
            <div class="card-header"><strong>Products</strong> on Stock</div>
            <div class="card-body p-0">
                <table class="table table-striped table-hover table-responsive-sm cs-tbl-products">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Image</th>
                            <th scope="col">Name</th>
                            <th scope="col">Balance</th>
                            <th scope="col">Position</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for product in products %}
                            <tr class="cs-product-data" data-product-name="{{ product.name }}">
                                <th scope="row" class="align-middle">{{ product.id }}</th>
                                <td class="py-0 align-middle">{{ product.getFirstMedia('products').img('thumb-40') | raw }}</td>
                                <td class="align-middle cs-product-name">{{ product.name }}</td>
                                <td class="align-middle">{{ product.balance }}</td>
                                <td class="align-middle">{{ product.position }}</td>
                                <td class="align-middle cs-actions">
                                    <a href="{{ route('products.show', product) }}"
                                       class="btn btn-sm btn-primary cs-product-show"
                                       title="Show {{ product.name }}">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ route('products.edit', product) }}" class="btn btn-sm btn-primary"
                                       title="Edit {{ product.name }}">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="{{ route('products.destroy', product) }}"
                                       class="btn btn-sm btn-light cs-product-delete"
                                       title="Delete {{ product.name }}" data-method="delete">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
